#!/usr/bin/env bash

releases_path="https://api.github.com/repos/dlang/dmd/tags?per_page=100"
cmd="curl -s"
if [ -n "$OAUTH_TOKEN" ]; then
  cmd="$cmd -H 'Authorization: token $OAUTH_TOKEN'"
fi
cmd="$cmd \"$releases_path\""

sort_cmd='sort'
if sort --help | grep -q -- '-V'; then
  sort_cmd='sort -V'
fi

versions=$(eval $cmd | grep -oE "name\": \"v2\..{1,15}\"," | sed 's/name\": \"v//;s/\",//;s/^.*://;s/-b.*$//;s/-rc.*$//;s/beta.*$//' | uniq | sort)
echo $versions
